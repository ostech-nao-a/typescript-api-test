    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "[Server] watch",
            "restart": true,
            "program": "npx ts-node ./server/src/index.ts",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "[Client] watch",
            "restart": true,
            "program": "npx ts-node --files client/src/index.ts",
            "protocol": "inspector"
        }
    ]
}